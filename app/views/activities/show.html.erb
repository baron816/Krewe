<div class="well">
	<h1><%= @activity.plan %> <%= link_to "Go", group_activity_add_user_path(@activity.group, @activity), method: :post, class: 'btn btn-success' unless @activity.user_going?(current_user)%></h1>
	<h1><%= link_to @activity.group_name, @activity.group %></h1>
	<h2><%= @activity.location %></h2>
	<h2><%= local_time(@activity.appointment) %></h2>
</div>

<div class="col-md-6">
	<h3>People going</h3>
		<ul class="list-group">
		<% @activity.users.each do |user| %>
			<li class="list-group-item"><%= link_to user.name, user_public_profile_path(user) %></li>
		<% end %>
		</ul>
</div>
