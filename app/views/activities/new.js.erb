$('#new_activity').hide().after('<%= j render("new") %>')
$('#datetimepicker').datetimepicker({
	format: 'YYYY-MM-DD hh:mm A',
	minDate: new Date()
});

mapLocation('<%= @group.latitude %>', '<%= @group.longitude %>')

$(document).on('click', '.suggested button', function() {
	var item = $(this);
	document.getElementById('activity_location').value = item.find('.name')[0].innerHTML
	document.getElementById('activity_longitude').value = item.find('.longitude')[0].innerHTML
	document.getElementById('activity_latitude').value = item.find('.latitude')[0].innerHTML
})
