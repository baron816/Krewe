<div class="container">
  <div class="card-panel">
    <%= form_for(@activity) do |f| %>
      <%= render 'shared/errors', object: @activity %>

      <div class="row">
        <div class="col s12 m6">


          <ul class="collection" id="spots">
            <li class="collection-item">Suggested Places</li>
            <li class="collection-item">
                <button type="button" class="btn purple place-type" data-type='bar' data-plan='Get drinks'>Bars</button> <button type="button" class="btn purple place-type" data-type='restaurant' data-plan='Get food'>Restaurants</button> <button type="button" class="btn purple place-type" data-type='cafe' data-plan='Get coffee'>Cafes</button>
            </li>
          </ul>
        </div>

      <div class="col s12 m6">
        <div class="input-field">
          <%= f.label "What's the plan?" %>
          <%= f.text_field :plan, required: true %>
        </div>
        <div class="input-field">
          <%= f.label "Where?" %>
          <%= f.text_field :location, required: true %>
        </div>

          <%= f.date_field :appointment, class: "datepicker" %>
      </div>
      <%= f.hidden_field :longitude %>
      <%= f.hidden_field :latitude %>
      <div id="map-canvas"></div> <br>
      <%= f.submit "Submit", class: 'btn green' %>
      </div>
    <% end %>
</div>

<%= javascript_tag do %>
  mapLocation('<%= @activity.latitude %>', '<%= @activity.longitude %>');
<% end %>
