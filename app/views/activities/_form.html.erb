<%= form_for([@group, @activity]) do |f| %>
  <%= render 'shared/errors', object: @activity %>

  <div class="row">
    <div class="col s12 m6">


      <ul class="collection" id="spots">
        <li class="collection-item">Suggested Places</li>
        <li class="collection-item">
            <button type="button" class="btn btn-info place-type" data-type='bar' data-plan='Get drinks'>Bars</button> <button type="button" class="btn btn-info place-type" data-type='restaurant' data-plan='Get food'>Restaurants</button> <button type="button" class="btn btn-info place-type" data-type='cafe' data-plan='Get coffee'>Cafes</button>
        </li>
      </ul>
    </div>

  <div class="col s12 m6">
    <div class="input-field">
      <%= f.label "What's the plan?" %>
      <%= f.text_field :plan, required: true %>
    </div>
    <div class="input-field">
      <%= f.label "Where?" %>
      <%= f.text_field :location, required: true %>
    </div>

      <%= f.datetime_select :appointment %>
  </div>
  <%= f.hidden_field :longitude %>
  <%= f.hidden_field :latitude %>
  <div id="map-canvas"></div> <br>
  <%= f.submit "Submit", class: 'btn btn-success' %>
  </div>
<% end %>

<%= javascript_tag do %>
  mapLocation('<%= @group.latitude %>', '<%= @group.longitude %>');
<% end %>
