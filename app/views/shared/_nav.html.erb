<nav>
	<div class="nav-wrapper blue">

		<a href="/" class="brand-logo">
			<%= image_tag 'krewe', id: 'logo' %>
		</a>
		<a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>

		<ul class="right hide-on-med-and-down">
			<% if current_user %>

				<li> <%= link_to "Home", user_path(current_user) %></li>
				<% if current_user.try(:show_notifications_positive?) %>
					<li><a class="dropdown-button" href="#!" data-activates="note-alerts">Notifications<i class="material-icons right">arrow_drop_down</i></a></li>

					<ul id="note-alerts" class="dropdown-content">
						<li><%= render 'shared/notifications' %></li>
					</ul>
				<% end %>
				<li> <%=  link_to 'Log Out', logout_path, method: :delete %></li>

			<% else %>
				<li><%= link_to "Log In", login_path, remote: true %></li>
				<li><%= link_to "Sign Up For Beta", beta_signup_path %></li>
			<% end %>

			<li><%= link_to "<i class='material-icons'>help</i>".html_safe, faq_path %></li>
		</ul>

		<%= render 'shared/sidebar' %>
	</div>
</nav>

<% if current_user.try(:show_notifications_positive?) %>
	<div id='notifications' class="modal">
		<div class="modal-content">
				<h3>Notifications</h3>
				<ul class="collection">
					<%= render 'shared/notifications' %>
				</ul>
		</div>
	</div>
<% end %>
