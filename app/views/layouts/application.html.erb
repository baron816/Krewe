<!DOCTYPE html>
<html>
<head>
  <title>Sidereal</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<%= link_to "Project Sidereal", root_path, class: "navbar-brand" %>
		</div>
		<% if current_user %>
			<%= link_to current_user.name, user_path(current_user), class: 'navbar-text navbar-right navbar-link' %>	
			<%=  link_to 'Log Out', logout_path, method: :delete, class: 'navbar-text navbar-right' %>
		<% else %>
			<%= link_to "Log In", login_path, class: 'navbar-text navbar-right navbar-link' %>
			<%= link_to "Sign Up", new_user_path, class: 'navbar-text navbar-right navbar-link' %>
		<% end %>
	</div>
</nav>
<%= yield %>

</body>
</html>
