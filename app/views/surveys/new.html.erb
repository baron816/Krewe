<div class="col-md-6 col-md-offset-3">
  <%= form_for @survey do |f| %>

    <%= render 'shared/errors', object: @survey %>

    <%= f.hidden_field :email %>
    <% reasons_for_leaving.each do |reason| %>
      <div class="input-group">
        <span class="input-group-addon">
          <%= f.check_box :reasons, {multiple: true}, reason, nil  %>
        </span>
        <%= label_tag :reasons, reason, class: "form-control" %>
      </div>
    <% end %>

    <div class="input-group">
      <span class="input-group-addon">
        <%= label_tag :reasons, "Other:" %>
      </span>
      <%= f.text_area :reasons, class: "form-control", multiple: true %>
    </div>
    <%= f.submit :Submit, class: "btn btn-primary" %>
  <% end %>
</div>
