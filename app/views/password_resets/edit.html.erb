<% provide(:title, "Reset Password") %>

<div class="container">
	<div class="card-panel">
		<h1>Reset Password</h1>
		<%= render 'shared/errors', object: @user %><br>
		
		<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
			<%= hidden_field_tag :email, @user.email %>

			<div class="input-field">
				<%= f.password_field :password, class: 'validate', required: true %>
				<%= f.label :password %>
			</div>

			<div class="input-field">
				<%= f.password_field :password_confirmation, class: 'validate', require: true %>
				<%= f.label :password_confirmation %>
			</div>

			<%= f.submit "Update password", class: "btn blue" %>
		<% end %>
	</div>
</div>
