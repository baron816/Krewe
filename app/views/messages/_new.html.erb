<%= form_for([@group_show.group, @group_show.new_message], remote: true) do |f| %>
	<%= f.text_area :content, class: 'form-control message-box', placeholder: 'Send a message...', required: true %> <br>
	<%= f.hidden_field :group_id, value: @group_show.group.id %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.submit "Submit", class: 'btn btn-primary', id: 'new-message-submit' %>
<% end %>
