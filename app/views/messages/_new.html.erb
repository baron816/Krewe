<%= form_for([@group, @message], remote: true) do |f| %>
	<%= f.text_area :content, class: 'form-control message-box' %> <br>
	<%= f.hidden_field :group_id, value: @group.id %>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.submit "Submit", class: 'btn btn-primary disabled', id: 'new-message-submit' %>
<% end %>