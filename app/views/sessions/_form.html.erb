<%= form_for(:session, url: login_path) do |f| %>
    <% if flash[:error] %>
      <div class="alert alert-danger">
        <%= flash[:error] %>
      </div>
    <% end %>
    <div class="input-field">
      <%= f.label "Email" %>
      <%= f.email_field :email, class: "validate", required: true %>
    </div>
    <div class="input-field">
      <%= f.label :password %>
      <%= f.password_field :password, class: "validate", required: true %>
    </div>
    <div class="input-field">
      <%= f.check_box :remember_me, checked: true %>
      <%= f.label :remember_me, "Stay Logged In" %>
    </div>

    <div class="input-field right-align">
      <%= f.submit 'Log in', class: 'btn blue' %>
    </div>
    <br>
    <div class="right-align">
      <%= link_to 'Click here to reset password', new_password_reset_path %>
    </div>
<% end %>
