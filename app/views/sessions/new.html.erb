<%= form_for(:session, url: login_path) do |f| %>
	<div class="col-md-6 col-md-offset-3">
		<h1>Log In</h1>
		<% if flash[:error] %>
			<div class="alert alert-danger">
				<%= flash[:error] %>
			</div>
		<% end %>
		<%= f.email_field :email, placeholder: 'email', class: 'form-control' %>
		<div class="input-group">
			<%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
			<span class="input-group-btn"><%= link_to 'Reset Password', new_password_reset_path, class: "btn btn-danger" %></span>
		</div>
		<div class="input-group">
			<span class="input-group-addon"><%= f.check_box :remember_me, class: "check_box" %></span>
			<%= f.label :remember_me, "Stay Logged In", class: "form-control" %>
		</div>
		<%= f.submit 'Log in', class: 'btn btn-primary form-control' %>
	</div>
<% end %>
