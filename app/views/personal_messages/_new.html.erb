<%= form_for(@personal_message) do |f| %>
	<%= f.text_area :content, placeholder: "Send #{@user.name} a message...", class: 'form-control message-box' %>
	<%= f.hidden_field :sender_id, value: current_user.id %>
	<%= f.hidden_field :receiver_id, value: @user.id %>
	<%= f.submit "Submit", class: 'btn btn-primary disabled', id: 'new-message-submit' %>
<% end %>