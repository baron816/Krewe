<%= form_for(@user.new_personal_message, remote: true) do |f| %>
	<%= f.text_area :content, placeholder: "Send #{@user.user_name} a message...", class: 'form-control message-box', required: true %> <br>
	<%= f.hidden_field :sender_id, value: current_user.id %>
	<%= f.hidden_field :receiver_id, value: @user.user_id %>
	<%= f.submit "Submit", class: 'btn btn-primary', id: 'new-message-submit' %>
<% end %>
