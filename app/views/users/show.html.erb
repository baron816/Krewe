<div class="row">
	<div class="col m12">
	<h1><%= @user.name %></h1>
		<div class="hide-on-med-and-down">
			<%= link_to "<i class='material-icons medium'>settings</i> Settings".html_safe, edit_user_path, class: "btn orange", remote: true %>
		</div>
		<%= link_to "Join Group", join_group_user_path, class: "btn green", method: :post if @user.under_group_limit? %></h5>
	</div>

		<div class="col s12 l6">
		<h3>Groups</h3>
		<div class="collection">
			<% @user.groups.each do |group| %>
				<%= link_to "#{group.name} <span class='badge'>#{current_user.unviewed_group_notification_count(group)}</span>".html_safe, group_path(group), class: "collection-item" %>
			<% end %>
		</div>

		<div class="hide-on-med-and-down">
			<% if @user.unique_friends.any? %>
				<h3>Friends</h3>
				<%= render partial: "users/friends", locals: { friends: @user.unique_friends } %>
			<% end %>
		</div>
	</div>

	<div class="col s12 l6">
		<%= render partial: "activities/activities", locals: { activities: @user.future_activities, group: @user.groups.first } %>
	</div>
</div>

<div class="modal" id="friends">
	<div class="modal-content">
		<h4>Friends</h4>
		<%= render partial: "users/friends", locals: { friends: @user.unique_friends } %>
	</div>
</div>
