<h1><%= @user.name %></h1>
<h5><%= link_to "Profile", public_profile_user_path(current_user), class: "btn btn-info" %> <%= link_to "Edit", edit_user_path, class: "btn btn-warning" %></h5>

<div class="col-md-6">
	<h3>Friends</h3>
	<ul class="list-group">
		<% @user.unique_friends.each do |friend| %>
			<% unless friend == current_user %>
				<li class="list-group-item">
					<%= link_to friend.name, public_profile_user_path(friend) %>
					<span class='badge'><%= @notifications.unviewed_personal_notifications_from_user_count(friend) %></span>
				</li>
			<% end %>
		<% end %>
	</ul>
</div>

<div class="col-md-6">
	<h3>Groups</h3>
	<ul class="list-group">
		<% @user.groups.each do |group| %>
			<li class="list-group-item"><%= link_to group.name, group_path(group) %>
				<span class='badge'><%= @notifications.unviewed_group_notification_count(group) %></span>
			</li>
		<% end %>
	</ul>
	<h5><%= link_to '<i class="glyphicon glyphicon-plus"></i> Add Group'.html_safe, add_group_user_path(current_user), method: :post, class: 'btn btn-success' if @user.under_group_limit? %>
	</h5>
</div>

<% if @activities.any? %>
	<div class="col-md-6">
		<h3>Upcoming Activities</h3>
		<ul class="list-group">
			<% @activities.each do |activity| %>
				<li class="list-group-item">
					<%= link_to activity.plan, activity_path(activity) %> with <%= activity.group_name %> <%= local_time_ago(activity.appointment) %>
				</li>
			<% end %>
		</ul>
	</div>
<% end %>
