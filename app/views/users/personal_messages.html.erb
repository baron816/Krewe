<div class="container">
	<div class="card-panel z-depth-2">
		<h2><%= image_tag @user.user_photo_url, class: "circle" %> <%= @user.user_name %></h2>
		Location: <%= @user.user_city %> <br>
		Category: <%= @user.user_category %>
	</div>

	<% unless @user.own_profile? %>
		<%= render partial: 'messages/messages', locals: { messages: @user.messages, messageable: @user.user, new_message: @user.new_message} %>
<% end %>

</div>
