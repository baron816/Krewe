<div class="well">
	<h1><%= @user.user_name %></h1>
	Email: <%= mail_to @user.user_email %> <br>
	Location: <%= @user.user_location %> <br>
	Category: <%= @user.user_category %>
</div>

<% unless @user.own_profile? %>
	<div class="well messages">
		<% if @user.personal_messages_any? %>
			<% if @user.multiple_pages? %>
				<div class="text-center">
					<button type="button" class="btn btn-primary more-messages">Load More</button>
				</div>
			<% end %>
			<div class="individual-messages">

			<% @user.personal_messages.reverse_each do |message| %>
				<%= render partial: 'messages/message', locals: {message: message} %>
			<% end %>
			</div>
		<% else %>
			<h3 id="intro">No messages yet. Why don't you say hi?</h3>
		<% end %>
	</div>

	<div class="infinite-scrolling">
		<%= will_paginate @user.personal_messages %>
	</div>

	<%= render partial: 'messages/new', locals: {message: @user.new_message} %>
<% end %>
