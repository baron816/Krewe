<div class="well">
	<h1><%= @user.user_name %></h1>
	Email: <%= mail_to @user.user_email %> <br>
	Location: <%= @user.user_location %> <br>
	Category: <%= @user.user_category %>
</div>

<% unless @user.own_profile? %>
	<div class="well messages">
		<% @user.personal_messages.each do |message| %>
			<%= render partial: 'personal_messages/show', locals: {message: message} %>
		<% end %>
	</div>

	<%= render 'personal_messages/new' %>
<% end %>
