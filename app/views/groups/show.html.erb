<h1>
	<%= @group.name %>
</h1>

<h2>Members</h2>
<ul>
	<% @group.users.each do |user| %>
		<li><%= link_to user.name, user_path(user) %></li>
	<% end %>
</ul>

<h2>Messages</h2>

<% @messages.each do |message| %>
	<div class="well">	
		<%= link_to message.user.name, user_path(message.user) %> <%= local_time_ago(message.created_at) %>	: <br>
		<%= message.content %> 
	</div>
<% end %>

<%= will_paginate @messages, renderer: BootstrapPagination::Rails %>

<h2>Write a new message</h2>
<%= render "messages/new" %>