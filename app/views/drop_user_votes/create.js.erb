$('#remove-btn-<%= @user.id %>').replaceWith('<%= link_to "Undo #{@user.group_drop_votes_count(@group)}/3", group_drop_user_vote_path(@group, @user.voter_vote(current_user)), remote: true, method: :delete, class: 'btn btn-warning secondary-content', id: "undo-btn-#{@user.id}"%>')

if (<%= @user.group_drop_votes_count(@group) == 3 %>) {
  $('#undo-btn-<%= @user.id %>').closest('li').remove()
}
